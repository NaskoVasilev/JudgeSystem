@model LessonPasswordInputModel

@{
    ViewData["Title"] = "Lesson Enter Password";
}

<div class="row">
	<div class="col-md-4" >
		<section>
			<h2>Enter valid password to continue</h2>
			<form method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="LessonPassword"></label>
					<input asp-for="LessonPassword" class="form-control" />
					<span asp-validation-for="LessonPassword" class="text-danger"></span>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary">Continue</button>
				</div>
			</form>
		</section>
	</div>
</div>
