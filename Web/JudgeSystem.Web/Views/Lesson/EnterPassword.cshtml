@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResources> SharedLocalizer
@model LessonPasswordInputModel

@{
    ViewData["Title"] = Localizer["Enter Password for lesson"];
}

<div class="row">
    <div class="col-md-6">
        <section>
            <h2 class="mb-5">@Localizer["Enter valid password to continue"]</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="LessonPassword"></label>
                    <input asp-for="LessonPassword" class="form-control" />
                    <span asp-validation-for="LessonPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">@SharedLocalizer["Continue"]</button>
                </div>
            </form>
        </section>
    </div>
</div>
