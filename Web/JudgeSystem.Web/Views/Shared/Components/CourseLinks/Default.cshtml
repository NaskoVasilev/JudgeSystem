@model IEnumerable<CourseViewModel>

@{ 
	IEnumerable<string> lessonTypes = ViewData["lessonTypes"] as IEnumerable<string>;
}

@foreach (var course in Model)
{
	<button class=@ViewData["class"]>
		<div class="dropdown">
			<a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-toggle="dropdown" id="dropdownMenuLink" aria-haspopup="true" aria-expanded="false">
				@course.Name
			</a>

			<div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
				@foreach (var lessonType in lessonTypes)
				{
					<a class="dropdown-item"
					   asp-area=""
					   asp-controller="Course"
					   asp-action="Lessons"
					   asp-route-courseId="@course.Id"
					   asp-route-lessonType="@lessonType">
						@($"{course.Name} - {lessonType}s")
					</a>
				}
			</div>
		</div>
	</button>
}