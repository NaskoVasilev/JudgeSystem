@inject IViewLocalizer Localizer
@model List<RecommendedLessonViewModel>

@if (Model.Count > 0)
{
    <h2 class="font-weight-lighter p-3 text-center">@Localizer["Your recommended lessons"]</h2>
    <div class="d-flex justify-content-between">
        <div class="col-md-6 border mr-2">
            @for (int i = 0; i < Model.Count / 2; i++)
            {
                <div class="border-top border-bottom pt-3">
                    <a class="h3 text-secondary text-decoration-none"
                       asp-area=""
                       asp-controller="Lesson"
                       asp-action="Details"
                       asp-route-practiceId="@Model[i].PracticeId"
                       asp-route-id="@Model[i].Id">@Utility.GetLessonName(Model[i].Name, Model[i].Type)</a>
                </div>
            }
        </div>

        <div class="col-md-6 border ml-2">
            @for (int i = Model.Count / 2; i < Model.Count; i++)
            {
                <div class="border-top border-bottom pt-3">
                    <a class="h3 text-secondary text-decoration-none"
                       asp-area=""
                       asp-controller="Lesson"
                       asp-action="Details"
                       asp-route-practiceId="@Model[i].PracticeId"
                       asp-route-id="@Model[i].Id">@Utility.GetLessonName(Model[i].Name, Model[i].Type)</a>
                </div>
            }
        </div>
    </div>
}

