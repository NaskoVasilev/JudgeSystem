@inject IStringLocalizer<SharedResources> SharedLocalizer

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@SharedLocalizer["Confirm your actions!"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @SharedLocalizer["Are you sure you want to execute deletion?"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@SharedLocalizer["Close"]</button>
                <button class="btn btn-danger" id="delete-confirm-btn" data-dismiss="modal">@SharedLocalizer["Delete"]</button>
            </div>
        </div>
    </div>
</div>
