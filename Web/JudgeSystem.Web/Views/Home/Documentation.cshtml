@inject IViewLocalizer Localizer

@{
    this.ViewData["Title"] = Localizer["Documentation"];
}

<h4 class="text-center">@Localizer["How users can work with the system?"]</h4>
<hr class="mb-4">
<div class="container d-flex">
    <div class="col-md-6 mr-4">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/FbM2rhNMFVs" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div class="col-md-6 ml-4">
        <p>@Localizer["What you will learn form the video?"]</p>
        <ul class="list-group list-group-flush">
            <li class="list-group-item class">
                <i class="fas fa-check text-success mr-2"></i>
                @Localizer["How to submit solutions and see results from them."]
            </li>
            <li class="list-group-item class">
                <i class="fas fa-check text-success mr-2"></i>
                @Localizer["How to see information about submisison's trial tests."]
            </li>
            <li class="list-group-item class">
                <i class="fas fa-check text-success mr-2"></i>
                @Localizer[" How can you participate in contests."]
            </li>
            <li class="list-group-item class">
                <i class="fas fa-check text-success mr-2"></i>
                @Localizer[" How can you track your results and progress."]
            </li>
            <li class="list-group-item class">
                <i class="fas fa-check text-success mr-2"></i>
                @Localizer["How can you activate your student profile."]
            </li>
        </ul>
    </div>
</div>
<hr class="my-4" />
<h4 class="text-center">@Localizer["More information about the project and author."]</h4>
<hr class="mb-4">
<div class="container d-flex">
    <div class="col-md-6 mr-4">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                @Localizer["My name is"] <a href="https://github.com/NaskoVasilev">@Localizer["Atanas Vasilev"]</a> @Localizer["and I am developing this system."]
            </li>
            <li class="list-group-item">
                @Localizer["My personal"] email: <span class="text-primary">nasko01vasilev@gmail.com</span>
            </li>
            <li class="list-group-item">
                <div class="d-flex justify-content-around">
                    <a href="https://www.linkedin.com/in/atanas-vasilev-54385418b/"> <i class="fab fa-linkedin font-size-30 text-primary"></i></a>
                    <a href="https://github.com/NaskoVasilev" class="text-dark"><i class="fab fa-github font-size-30"></i></a>
                    <a href="https://www.facebook.com/atanas.vasilev.9480"><i class="fab fa-facebook font-size-30 text-primary"></i></a>
                </div>
            </li>
        </ul>
    </div>
    <div class="col-md-6 ml-4">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                @Localizer["The project is open source and you can find the repository"] <a href="https://github.com/NaskoVasilev/JudgeSystem">@Localizer["here"]</a>.
            </li>
            <li class="list-group-item">
                @Localizer["Contact with me if you would like to contribute."]
            </li>
            <li class="list-group-item">
                @Localizer["If you find some problems do not hesitate to send some feedback or even create an issue in github."]
            </li>
        </ul>
    </div>
</div>

