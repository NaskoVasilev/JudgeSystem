@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResources> SharedLocalizer
@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = Localizer["All Users"];
}

<table class="table">
    <thead>
        <tr class="row">
            <th class="col-lg-3 col-md-3 col-sm-2">@SharedLocalizer["Username"]</th>
            <th class="col-lg-3 col-md-2 col-sm-2">@SharedLocalizer["First name"]</th>
            <th class="col-lg-3 col-md-2 col-sm-2">@SharedLocalizer["Last name"]</th>
            <th class="col-lg-3 col-md-4 col-sm-6">@SharedLocalizer["Email"]</th>
        </tr>
        <tr class="row inputs">
            <th class="col-sm-3">
                <input type="text" id="username" class="form-control" placeholder="@Localizer["Filter by username"]">
            </th>
            <th class="col-sm-3">
                <input type="text" id="first-name" class="form-control" placeholder="@Localizer["Filter by first name"]">
            </th>
            <th class="col-sm-3">
                <input type="text" id="last-name" class="form-control" placeholder="@Localizer["Filter by last name"]">
            </th>
            <th class="col-sm-3">
                <input type="text" id="email" class="form-control" placeholder="@Localizer["Filter by email"]">
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr class="row data-row">
                <td class="col-lg-3 col-md-3 col-sm-2">
                    <a target="_blank" class="text-dark" 
                       asp-area="@GlobalConstants.AdministrationArea"
                       asp-controller="User"
                       asp-action="Results"
                       asp-route-userId="@user.Id">
                        @user.Username
                    </a>
                </td>
                <td class="col-lg-3 col-md-2 col-sm-2">@user.Name</td>
                <td class="col-lg-3 col-md-2 col-sm-2">@user.Surname</td>
                <td class="col-lg-3 col-md-4 col-sm-6">@user.Email</td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="~/js/controllers/userController.js"></script>
}
