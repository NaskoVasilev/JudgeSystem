@inject IStringLocalizer<SharedResources> SharedLocalizer
@model LessonAddPasswordInputModel

@{
    ViewData["Title"] = SharedLocalizer["Add password to the lesson"];
}

<h1 class="mb-4 text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-5 mx-auto">
        <section>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LessonPassword"></label>
                    <input asp-for="LessonPassword" class="form-control" />
                    <span asp-validation-for="LessonPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">@SharedLocalizer["Add password"]</button>
                </div>
            </form>
        </section>
    </div>
</div>
