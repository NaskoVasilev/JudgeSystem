@inject IStringLocalizer<SharedResources> SharedLocalizer
@model LessonInputModel

@{
    ViewData["Title"] = SharedLocalizer["Lesson Create"];
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6 mx-auto">
        <section>
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderBy"></label>
                    <input asp-for="OrderBy" class="form-control" />
                    <span asp-validation-for="OrderBy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LessonPassword"></label>
                    <input asp-for="LessonPassword" class="form-control" />
                    <span asp-validation-for="LessonPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type"></label>
                    <select class="form-control" asp-for="Type">
                        <partial name="Partials/LessonTypeOptions" model="Model?.Type.ToString()" />
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">@SharedLocalizer["Create"]</button>
                </div>
            </form>
        </section>
    </div>
</div>
