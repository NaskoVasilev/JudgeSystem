@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResources> SharedLocalizer
@model ContestViewModel

@{
    ViewData["Title"] = Localizer["Delete Contest"];
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label>@SharedLocalizer["Start Time"]</label>
                    <input type="text" class="form-control" value="@Model.FormatedStartTime" disabled />
                </div>
                <div class="form-group">
                    <label>@SharedLocalizer["End Time"]</label>
                    <input type="text" class="form-control" value="@Model.FormatedEndTime" disabled />
                </div>
                <div class="form-group">
                    <button type="submit" id="add-contest" class="btn btn-primary">@SharedLocalizer["Delete"]</button>
                </div>
            </form>
        </section>
    </div>
</div>