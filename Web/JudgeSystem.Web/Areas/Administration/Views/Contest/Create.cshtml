@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResources> SharedLocalizer
@model ContestCreateInputModel

@{
    ViewData["Title"] = Localizer["Contest Create"];
    string defaultLessonType = LessonType.Exercise.ToString();
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartTime"></label>
                    <input type="text" autocomplete="off" asp-for="StartTime" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndTime"></label>
                    <input type="text" autocomplete="off" asp-for="EndTime" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
                <vc:courses-select-list></vc:courses-select-list>
                <div class="form-group">
                    <label>Lesson Type</label>
                    <select id="lessonType" class="form-control">
                        <partial name="Partials/LessonTypeOptions" model="defaultLessonType"/>
                    </select>
                </div>
                <div class="form-group">
                    <label>Lesson</label>
                    <select id="lessonId" asp-for="LessonId" class="form-control">
                        <option value="" disabled selected>Choose lesson</option>
                    </select>
                    <span asp-validation-for="LessonId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" id="add-contest" class="btn btn-primary" disabled>@SharedLocalizer["Create"]</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts{
    <script src="~/js/controllers/contestController.js"></script>
    <script>
        $('#StartTime').datetimepicker({
            format: 'd.m.Y H:i',
            lang: 'en'
        });
        $('#EndTime').datetimepicker({
            format: 'd.m.Y H:i',
            lang: 'en'
        });
    </script>
}
