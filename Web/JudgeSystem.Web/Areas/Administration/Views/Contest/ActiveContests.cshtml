@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResources> SharedLocalizer
@model IEnumerable<ContestBreifInfoViewModel>

@{
    ViewData["Title"] = Localizer["Active contests"];
    string administrationArea = GlobalConstants.AdministrationArea;
}

    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

<table class="table table-hover">
    <thead>
        <tr class="row">
            <th class="col-md-7">@SharedLocalizer["Name"]</th>
            <th class="col-md-5">@SharedLocalizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contest in Model)
        {
            <tr class="row">
                <td class="col-md-7">
                    <a class="text-decoration-none text-dark"
                       asp-controller="Contest" asp-action="Results" asp-route-id="@contest.Id">@contest.Name</a>
                </td>
                <td class="col-md-5">
                    <a class="btn btn-info" asp-area="@administrationArea"
                       asp-controller="Contest" asp-action="Details" asp-route-id="@contest.Id">@SharedLocalizer["Details"]</a>
                    <a class="btn btn-warning" asp-area="@administrationArea"
                       asp-controller="Contest" asp-action="Edit" asp-route-id="@contest.Id">@SharedLocalizer["Edit"]</a>
                    <a class="btn btn-danger" asp-area="@administrationArea"
                       asp-controller="Contest" asp-action="Delete" asp-route-id="@contest.Id">@SharedLocalizer["Delete"]</a>

                </td>
            </tr>
        }
    </tbody>
</table>
