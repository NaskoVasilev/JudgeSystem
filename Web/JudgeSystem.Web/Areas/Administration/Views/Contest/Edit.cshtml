@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResources> SharedLocalizer
@model ContestEditInputModel

@{
    ViewData["Title"] = Localizer["Edit Contest"];
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartTime"></label>
                    <input type="text" autocomplete="off" asp-for="StartTime" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndTime"></label>
                    <input type="text" autocomplete="off" asp-for="EndTime" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" id="add-contest" class="btn btn-primary">@SharedLocalizer["Edit"]</button>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts{
    <script src="~/js/initializeDateTimePicker.js"></script>
    <script>
        initializeDateTimePicker('StartTime');
        initializeDateTimePicker('EndTime');
    </script>
}
