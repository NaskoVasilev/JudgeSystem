@inject IStringLocalizer<SharedResources> SharedLocalizer
@inject IViewLocalizer Localizer
@model StudentEditInputModel

@{
    ViewData["Title"] = SharedLocalizer["Edit Student"];
}

<h2 class="text-center">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SchoolClassId"></label>
                    <select class="form-control" asp-for="SchoolClassId">
                        <vc:school-classes-options id="@Model.SchoolClassId"></vc:school-classes-options>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="NumberInCalss"></label>
                    <input asp-for="NumberInCalss" class="form-control" />
                    <span asp-validation-for="NumberInCalss" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Localizer["Student status"]: @(Model.IsActivated ? SharedLocalizer["Activated"] : SharedLocalizer["Not Activated"])
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">@SharedLocalizer["Edit"]</button>
                </div>
            </form>
        </section>
    </div>
</div>
