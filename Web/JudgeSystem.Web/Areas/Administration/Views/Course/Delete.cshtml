@inject IStringLocalizer<SharedResources> SharedLocalizer
@model CourseViewModel

@{
    ViewData["Title"] = SharedLocalizer["Delete Course"];
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post" asp-area="@GlobalConstants.AdministrationArea" asp-controller="Course" asp-action="Delete">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="@SharedLocalizer["Delete"]" />
                </div>
            </form>
        </section>
    </div>
</div>
