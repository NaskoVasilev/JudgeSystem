@model ResourceEditInputModel

@{
    ViewData["Title"] = "Resource Edit";
    var resourceTypes = ViewData[GlobalConstants.ResourceTypesKey] as IEnumerable<SelectListItem>;
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ResourceType"></label>
                    <select class="form-control" asp-for="ResourceType" asp-items="resourceTypes"></select>
                </div>

                <div class="form-group">
                    <div class="file-upload-wrapper my-4" data-text="Select your file!">
                        <input asp-for="File" type="file" class="file-upload-field form-control" value="">
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts{
    <script src="~/js/fileUploader.js"></script>
}
