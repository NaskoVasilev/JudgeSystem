@inject IStringLocalizer<SharedResources> SharedLocalizer
@model ResourceEditInputModel

@{
    ViewData["Title"] = SharedLocalizer["Resource Edit"];
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderBy"></label>
                    <input asp-for="OrderBy" class="form-control" />
                    <span asp-validation-for="OrderBy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="file-upload-wrapper my-4" data-text="@SharedLocalizer["Select your file!"]">
                        <input asp-for="File" type="file" class="file-upload-field form-control" value="">
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">@SharedLocalizer["Edit"]</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts{
    <script src="~/js/fileUploader.js"></script>
    <script src="~/js/controllers/resourceController.js"></script>
}
