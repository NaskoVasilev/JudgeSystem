@model ResourceInputModel

@{
	ViewData["Title"] = "Resource Create";
	var resourceTypes = ViewData["resourceTypes"] as IEnumerable<SelectListItem>;
}

<h1>@ViewData["Title"]</h1>
<div class="row">
	<div class="col-md-4" >
		<section>
			<form method="post" enctype="multipart/form-data">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ResourceType"></label>
					<select class="form-control" asp-for="ResourceType" asp-items="resourceTypes"></select>
					<span asp-validation-for="ResourceType" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="File"></label>
					<input asp-for="File" type="file">
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary">Add</button>
				</div>
			</form>
		</section>
	</div>
</div>
